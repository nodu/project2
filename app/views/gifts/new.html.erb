<%= form_for @gift do |f| %>

  <%= f.label :category %>
  <%= f.text_field :category %>
  <br/>

  <%= f.label :title %>  
  <%= f.text_field :title %>  
  <br/>

  <%= f.label :value %>
  <%= f.number_field :value %>  
  <br/>

  <%= f.label :description %>  
  <%= f.text_area :description %>
  <br/>

  <%= f.label :avatars %>  
  <%= f.fields_for :avatars, @gift.avatars do |avatar_form| %>
    <%= avatar_form.file_field :image %>
  <% end %>

  <%= f.submit %>
<% end %>
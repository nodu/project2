<div class="gifts row">
	<% if current_user %>
	
	<% @gifts.each do |gift| %>
	<% if current_user.id != gift.user.id %>

	<div class="gift col-lg-2">
    <div>
      <%= gift.title %>
    </div>
    <div>
      User: <%= link_to gift.user.name.capitalize, user_path(gift.user) %>
    </div>
    <div>
      <% gift.avatars.each do |avatar| %>
      <%= image_tag avatar.image.tiny_thumb.url %>
      <% end %>
      <%= link_to "Show me more!", gift_path(gift), class: "btn btn-primary" %>
    </div> 
  </div>

	<% end %>
	<% end %>
	<% end %>

	


	<% if !current_user %>

	<% @gifts.each do |gift| %>
    <div class="gift col-lg-2">
      <div>
        <%= gift.title %>
      </div>
    <div>
      User: <%= link_to gift.user.name.capitalize, user_path(gift.user) %>
    </div>
      <div>
        <% gift.avatars.each do |avatar| %>
        <%= image_tag avatar.image.tiny_thumb.url %>
        <% end %>
        <%= link_to "Show me more!", gift_path(gift), class: "btn btn-primary" %>
      </div> 
    </div>
	<% end %>
	<% end %>


</div>




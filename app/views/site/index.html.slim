/ p.Class#id Hi!, #{@user.name}
.row
	.col-lg-6.col-lg-offset-3
		/ h1 Hi ...
		table.table.table-bordered.table-striped
			caption Our Users!
			thead
				tr
					th Name
					th Email
					th Created
					th Gift[0]
			tbody
				- @users.each do |user|
				  / li #{user.name}
				  tr
				  	td #{user.name}
				  	td #{user.email}
				  	td #{user.created_at}
				  	- if user.gift.empty?
				  		td NO GIFT
				  	- else
				  	  / td #{user.gift[0].title}
				  	  td
				  	    = link_to "#{user.gift[0].title}", regift_url(user.gift[0].id)
				  	

